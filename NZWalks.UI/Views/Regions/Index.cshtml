@using NZWalks.UI.Models.DTO
@model IEnumerable<RegionDto>;

<h1 class="mt-3">Regions</h1>
<div class="d-flex justify-content-end">
	<a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
	<thead>
		<th>Id</th>
		<th>Code</th>
		<th>Name</th>
		<th> </th>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Code</td>
				<td>@item.Name</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Regions" class="btn btn-light">Edit</a>
				</td>
			</tr>
		}
	</tbody>
</table>